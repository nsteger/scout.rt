  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "node",
    "module": "ES6",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
